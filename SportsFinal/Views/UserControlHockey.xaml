<UserControl x:Class="SportsFinal.Views.UserControlHockey"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SportsFinal.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Content="Show Teams" HorizontalAlignment="Left" Height="24" Margin="672,21,0,0" VerticalAlignment="Top" Width="97" Click="ShowTeam_Click"/>
        <Button Content="Add Team" HorizontalAlignment="Left" Height="24" Margin="448,21,0,0" VerticalAlignment="Top" Width="97" Click="AddTeam_Click"/>
        <Button Content="Remove Team" HorizontalAlignment="Left" Height="24" Margin="560,21,0,0" VerticalAlignment="Top" Width="97" Click="RemoveTeam_Click"/>
        <TextBox x:Name="TeamLabel" HorizontalAlignment="Left" Height="319" Margin="675,70,0,0" TextWrapping="Wrap" Text="{Binding TeamLabel}" VerticalAlignment="Top" Width="100"/>
        <Label Content="Hockey Teams" HorizontalAlignment="Left" Height="43" Margin="583,66,0,0" VerticalAlignment="Top" Width="131"/>

    </Grid>
</UserControl>
