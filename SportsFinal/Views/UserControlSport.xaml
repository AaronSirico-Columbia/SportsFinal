<UserControl x:Class="SportsFinal.Views.UserControlSport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SportsFinal.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,0,1,-1">
        <Button Content="Show Sports" HorizontalAlignment="Left" Height="24" Margin="7,35,0,0" VerticalAlignment="Top" Width="97" Click="Button_Click"/>
        <Button Content="Add Sport" HorizontalAlignment="Left" Height="24" Margin="117,34,0,0" VerticalAlignment="Top" Width="97" Click="AddSport_Click"/>
        <Button Content="Remove Sport" HorizontalAlignment="Left" Height="24" Margin="223,34,0,0" VerticalAlignment="Top" Width="97" Click="RemoveSport_Click"/>
        <TextBox x:Name="SportLabel" HorizontalAlignment="Left" Height="223" Margin="8,83,0,0" TextWrapping="Wrap" Text="{Binding Path=SportLabel}" VerticalAlignment="Top" Width="100"/>

    </Grid>
</UserControl>
