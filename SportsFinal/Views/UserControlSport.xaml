<UserControl x:Class="SportsFinal.Views.UserControlSport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SportsFinal.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="SportNameTextBox" HorizontalAlignment="Left" Height="52" Margin="99,90,0,0" TextWrapping="Wrap" Text="{Binding Path=SportName}" VerticalAlignment="Top" Width="178" FontSize="20"/>
        <Button x:Name="ShowSportButton" Content="Show Sport"  HorizontalAlignment="Left" Height="47" Margin="13,241,0,0" VerticalAlignment="Top" Width="114" Command="{Binding showSportCommand}"/>
    </Grid>
</UserControl>
