<UserControl x:Class="SportsFinal.Views.UserControlSport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SportsFinal.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="18" Margin="-1,110,0,0" VerticalAlignment="Top" Width="448" Fill="#FF333333" RenderTransformOrigin="0.071,-1.833"/>
        <Label Content="Sport" HorizontalAlignment="Left" Height="58" Margin="17,40,0,0" VerticalAlignment="Top" Width="253" FontSize="35" Foreground="#FF333333"/>
        <TextBox x:Name="SportNameTextBox"  HorizontalAlignment="Left" Height="45" Margin="184,43,0,0" TextWrapping="Wrap" Text="{Binding Path=SportName}" VerticalAlignment="Top" Width="244" FontSize="20" />
        <Button x:Name="AddSportButton" Content="Add Sport"  HorizontalAlignment="Left" Height="47" Margin="13,241,0,0" VerticalAlignment="Top" Width="114" Command="{Binding AddSportCommand}"/>
        <Button x:Name="ShowSportButton" Content="Show Sports"  HorizontalAlignment="Left" Height="47" Margin="171,241,0,0" VerticalAlignment="Top" Width="114" Command="{Binding ShowSportCommand}"/>

    </Grid>
</UserControl>
