<Window x:Class="SportsFinal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportsFinal"
        xmlns:views="clr-namespace:SportsFinal.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="556" Width="800">
    <Grid>
        <StackPanel>
            <views:UserControlSport x:Name="ucSport" Height="435" Width="799"/>
            <Button x:Name="ToLacrossePage" Content="Go To Lacrosse" Width="220" Height="26" Click="ToLacrossePage_Click" RenderTransformOrigin="0.471,1.114"/>
            <Button x:Name="ToHockeyPage" Content="Go To Hockey" Width="220" Height="26" Click="ToHockeyPage_Click" RenderTransformOrigin="0.471,1.114"/>
        </StackPanel>
        <Frame x:Name="mainFrame" Margin="1,4,0,0" Height="526" VerticalAlignment="Top"/>
    </Grid>

</Window>
